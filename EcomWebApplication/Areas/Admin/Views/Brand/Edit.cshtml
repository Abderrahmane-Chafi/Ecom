@model Ecom.Models.Brand

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="ImageUrl" hidden />
    <div class="my-4 row">
        <div class="col-10">
            <div class="border p-3 ">
                <div class="row pb-2">
                    <h2 class="text-primary">Edit Brand</h2>
                    <hr />
                </div>
                @*<div asp-validation-summary="All"></div>*@
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                 <div class="mb-3">
                    <label asp-for="ImageUrl"></label>
                    <input id="UploadBox" type="file" name="file" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                <a asp-controller="Brand" asp-action="Index" class="btn btn-secondary" style="">
                    Back to list
                </a>
            </div>
        </div>
        <div class="col-2 mt-4">
            <img src="@Model.ImageUrl"
                 style="width: 100%;border-radius:5px;border:1px solid #bbb9b9" />
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function ValidateInput() {
            if (document.getElementById("UploadBox").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Pleas upload an Image!',
                });
                return false;
            }
            return true;
        }
    </script>
}

